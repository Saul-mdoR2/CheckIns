<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CheckIns" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="android:buttonStyle">@style/appBoton</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>
    
    <style parent="Widget.AppCompat.Button" name="appBoton">
        <item name="android:colorButtonNormal">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="appThemeTituloCelda" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>
</resources>